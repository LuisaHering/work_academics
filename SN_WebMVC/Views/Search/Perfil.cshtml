@model SN_WebMVC.Models.ProfileViewModel

@{
    ViewBag.Title = "Busca";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wa-container">

    <h2>Perfil</h2>

    <div style="display:flex;flex-direction:row;justify-content:space-around;align-items:flex-end;">

        <div style="margin:40px 20px 40px 0">
            <img src="@Html.DisplayFor(model => model.Foto)" alt="Foto" style="width:150px;height:150px;" />
        </div>

        <ul class="wa-list" style="margin:40px;">

            <li class="wa-perfil-label">
                @Html.DisplayNameFor(model => model.Nome)
            </li>

            <li class="wa-perfil-info">
                @Html.DisplayFor(model => model.Nome)
            </li>

            <li class="wa-perfil-label">
                @Html.DisplayNameFor(model => model.Email)
            </li>

            <li class="wa-perfil-info">
                @Html.DisplayFor(model => model.Email)
            </li>

            <li class="wa-perfil-label">
                Data de nascimento
            </li>

            <li class="wa-perfil-info">
                @Html.DisplayFor(model => model.Nascimento)
            </li>
        </ul>

        <ul class="wa-list" style="margin:40px;">

            <li class="wa-perfil-label">
                @Html.DisplayNameFor(model => model.Universidade)
            </li>

            <li class="wa-perfil-info">
                @Html.DisplayFor(model => model.Universidade)
            </li>

            <li class="wa-perfil-label">
                @Html.DisplayNameFor(model => model.Curso)
            </li>

            <li class="wa-perfil-info">
                @Html.DisplayFor(model => model.Curso)
            </li>

            <li class="wa-perfil-label">
                Data de entrada
            </li>

            <li class="wa-perfil-info">
                @Html.DisplayFor(model => model.DataInicio)
            </li>

            <li class="wa-perfil-label">
                @Html.DisplayNameFor(model => model.Biografia)
            </li>

            <li class="wa-perfil-info">
                @Html.DisplayFor(model => model.Biografia)
            </li>
        </ul>

    </div>

    <div>
        <input type="submit" value="Seguir" class="btn btn-default" />
    </div>
    <div>
        <button class="btn btn-link">Seguir</button>
    </div>
</div>
