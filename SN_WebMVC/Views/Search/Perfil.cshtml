@model SN_WebMVC.Models.ProfileViewModel

@{
    ViewBag.Title = "Busca";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wa-container">



    <h2>Perfil</h2>

    <div style="display:flex;flex-direction:row;justify-content:flex-start;align-items:flex-end;">
        <ul class="wa-list" style="margin:40px;">


            <li class="wa-perfil-info">
                <div class="picture">
                    <img src="@Html.DisplayFor(model => model.Foto)" alt="Foto" style="width:150px;height:150px;margin-bottom:10px;" />
                </div>
            </li>

            <li class="wa-perfil-label">
                <div>
                    @Html.DisplayNameFor(model => model.Nome)
                </div>
            </li>

            <li class="wa-perfil-info">
                <div>
                    @Html.DisplayFor(model => model.Nome)
                </div>
            </li>

            <li class="wa-perfil-label">
                <div>
                    @Html.DisplayNameFor(model => model.Email)
                </div>
            </li>

            <li class="wa-perfil-info">
                <div>
                    @Html.DisplayFor(model => model.Email)
                </div>
            </li>

            <li class="wa-perfil-label">
                <div>
                </div>
                Data de nascimento
            </li>

            <li class="wa-perfil-info">
                @Html.DisplayFor(model => model.Nascimento)
            </li>


            <li class="wa-perfil-label">
                @Html.DisplayNameFor(model => model.Universidade)
            </li>

            <li class="wa-perfil-info">
                @Html.DisplayFor(model => model.Universidade)
            </li>

            <li class="wa-perfil-label">
                @Html.DisplayNameFor(model => model.Curso)
            </li>

            <li class="wa-perfil-info">
                @Html.DisplayFor(model => model.Curso)
            </li>

            <li class="wa-perfil-label">
                Data de entrada
            </li>

            <li class="wa-perfil-info">
                @Html.DisplayFor(model => model.DataInicio)
            </li>

            <li class="wa-perfil-label">
                @Html.DisplayNameFor(model => model.Biografia)
            </li>

            <li class="wa-perfil-info">
                @Html.DisplayFor(model => model.Biografia)
            </li>
        </ul>


        <div>
            <input type="submit" value="Editar" class="btn btn-default" />
        </div>

    </div>
    <div>
        <button class="btn btn-link">Seguir</button>
    </div>
</div>
