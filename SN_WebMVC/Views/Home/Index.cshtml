@model SN_WebMVC.Models.ProfileViewModel

@{
    ViewBag.Title = "Home";
}
<div class="wa-container">

    <div style="display:flex;flex-direction:row; margin: 0 20px;">
        <div class="wa-feed">
            <div class="wa-list wa-border-top">
                @*--inicio foreach--*@

                @foreach(var post in ViewBag.Posts) {
                    <div class="wa-post">
                        <div class="wa-post-header">
                            <div class="wa-post-autor">
                                <h4></h4>
                            </div>
                            <div class="wa-post-info">
                                <h3>Laboratorio - @post.NomeLaboratorio</h3>
                            </div>
                        </div>
                        <div class="wa-post-conteudo">
                            <p>
                                <h3>@post.Mensagem</h3>
                            </p>
                            <p>
                                <h4>@post.DataDePublicacao</h4>
                            </p>
                        </div>
                        <div class="wa-post-botoes">
                            <button class="btn btn-default">Laboratório</button>
                        </div>
                    </div>
                }

                @*--fim foreach--*@
            </div>
        </div>
        <div style="display:flex;flex-direction:column;justify-content:flex-start;align-items:flex-start;width:30%;">
            <h4>Buscar membros</h4>
            <form action="/search/Search" method="post">
                <input class="form-control" id="Pesquisar" name="Pesquisar" type="text" placeholder="Digite um nome">
                <button type="submit" class="btn btn-default" style="margin: 10px 0;">Pesquisar</button>
            </form>
            @*<img src="\Content\images\gabigordo.jpg" style="width:200px;" title="hello" />*@
        </div>

    </div>

</div>
