﻿<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Work Academics</title>

    <link rel="stylesheet" type="text/css" href="/Content/styles/global.css" media="screen" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="shortcut icon" href="/Content/images/Logo_favicon.ico" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="wa-nav-container container">

            <div class="navbar-header">
                @if (ViewBag.Title != "Login" && ViewBag.Title != "Cadastrar")
                {
                    <a href="/Home/Index">
                        <img src="/Content/images/logo1_6.jpg" alt="logo" class="wa-logo-header" />
                    </a>
                }
                else
                {
                    <img src="/Content/images/logo1_6.jpg" alt="logo" class="wa-logo-header" />
                }
            </div>

            <button class="btn navbar-toggle" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon">Menu</span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="nav navbar-nav"></ul>
                @if (ViewBag.Title != "Login" && ViewBag.Title != "Cadastrar")
                {

                    <form action="/Account/Logout" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-default navbar-btn navbar-right" style="margin-right:30px;">Logout</button>
                    </form>
                }
            </div>
        </div>
    </div>

    @if (ViewBag.Title != "Login" && ViewBag.Title != "Cadastrar")
    {
    <div id="wa-sidebar-id" class="wa-sidebar wa-sidebar-grande">

        <div class="text-center" style="margin-top: 20px;">
            <button id="btn-resize1" class="btn">
                <i class="material-icons">skip_previous</i>
            </button>
            <button id="btn-resize2" class="btn wa-resize-btn-none">
                <i class="material-icons">skip_next</i>
            </button>
        </div>

        @if (Session["picture_profile"] != null)
        {
            var url = Session["picture_profile"];
            <a href="/Home/Perfil">
                <img src=@url alt="profile" class="wa-profile-pic wa-profile-pic-grande" />
            </a>
        }
        else
        {
            <a href="/Home/Perfil">
                <img src="\Content\images\default-profile-pic.png" alt="default-picture" class="wa-profile-pic wa-profile-pic-grande" />
            </a>
        }

        <form action="/Home/Perfil" method="get" class="text-center wa-perfil-btn">
            <button type="submit" class="btn btn-default">Ver perfil</button>
        </form>

        <hr class="wa-hr wa-hr-grande" />
        <ul class="nav nav-stacked text-center wa-sidebar-list-grande">

            <li class="nav-item">
                <a href="/Home/Index">Home</a>
            </li>
            <li class="nav-item">
                <a href="/Laboratory/Index">Meus laboratórios</a>
            </li>
            <li class="nav-item">
                <a href="/Project/Index">Meus projetos</a>
            </li>
            <li class="nav-item">
                <a href="#">Conexões</a>
            </li>
            <li class="nav-item">
                <a href="/Galery/Index">Galeria</a>
            </li>

        </ul>

        <ul class="nav nav-stacked text-center wa-sidebar-list-pequeno">

            <li class="nav-item">
                <a href="/Home/Index" title="Home"><i class="material-icons">home</i></a>
            </li>
            <li class="nav-item">
                <a href="/Laboratory/Index" title="Meus laboratórios"><i class="material-icons">storage</i></a>
            </li>
            <li class="nav-item">
                <a href="/Project/Index" title="Meus projetos"><i class="material-icons">file_copy</i></a>
            </li>
            <li class="nav-item">
                <a href="#Conexoes" title="Conexões"><i class="material-icons">people</i></a>
            </li>
            <li class="nav-item">
                <a href="/Galery/Index" title="Galeria"><i class="material-icons">photo_library</i></a>
            </li>

        </ul>

        <hr class="wa-hr wa-hr-grande" />
        <div class="text-center">
            <img src="~/Content/images/Logo1_5.png" id="mini-logo-sidebar" class="wa-mini-logo-grande" alt="Logo" />
        </div>

    </div>
    }

    <div class="container body-content wa-body-content-margin12">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/SideBar.js"></script>
</body>
</html>
