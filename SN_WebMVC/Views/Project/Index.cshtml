@model IEnumerable<SN_WebMVC.Models.ProjectViewModel>

@{
    ViewBag.Title = "Projeto";
    Html.RenderPartial("_SideBar");
}

<h2>Meus projetos</h2>

<div class="form-group" style="padding: 10px 0;">
    <a href="Create" class="btn btn-default" style="text-decoration:none;">Novo projeto</a>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            Descrição
        </th>
        <th>
            Data de criação
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataCriacao)
        </td>
        <td>
            <a href="/Project/Edit" class="btn btn-default">Editar</a>
            <a href="/Project/Details" class="btn btn-default">Detalhes</a>
        </td>
    </tr>
}

</table>

<div class="form-group">
    <a href="/Home/Index" class="btn btn-link">Retornar</a>
</div>